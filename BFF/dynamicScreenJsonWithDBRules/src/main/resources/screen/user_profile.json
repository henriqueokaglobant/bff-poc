[
  {
    "name": "person",
    "titleKey": "personLabel",
    "componentType": "group",
    "properties": {
      "columns": [
        {
          "key": "id",
          "label": "ID",
          "componentType": "number",
          "sortable": false,
          "numberFormat": "1.0-0",
          "width": "80px",
          "align": "right"
        },
        {
          "key": "name",
          "label": "Name",
          "componentType": "text",
          "sortable": true,
          "width": "auto",
          "align": "left"
        },
        {
          "key": "createdAt",
          "label": "@@createdAt@@",
          "componentType": "date",
          "sortable": true,
          "dateFormat": "mediumDate",
          "width": "160px",
          "align": "left"
        },
        {
          "key": "price",
          "label": "@@price@@",
          "componentType": "currency",
          "sortable": true,
          "currency": "USD",
          "currencyDisplay": "symbol",
          "width": "140px",
          "align": "right"
        },
        {
          "key": "active",
          "label": "Active",
          "componentType": "boolean",
          "sortable": true,
          "width": "110px",
          "align": "center"
        }
      ],
      "styles": {
        "headerBg": "#1E3A8A",
        "headerText": "#FFFFFF",
        "rowBg": "#FFFFFF",
        "rowHoverBg": "#F1F5F9",
        "cellText": "#111827",
        "booleanTrueColor": "#22C55E",
        "booleanFalseColor": "#EF4444"
      },
      "filter": {
        "enabled": true,
        "placeholder": "Search table..."
      },
      "sort": {
        "enabled": true,
        "active": "name",
        "direction": "asc",
        "disableClear": true
      },
      "pagination": {
        "enabled": true,
        "pageIndex": 0,
        "pageSize": 10,
        "pageSizeOptions": [
          5,
          10,
          25,
          50,
          100
        ],
        "showFirstLastButtons": true
      }
    },
    "children": [
      {
        "name": "person.firstName",
        "titleKey": "firstNameLabel",
        "componentType": "textbox",
        "properties": {
          "style": "width:80px; align:right"
        }
      },
      {
        "name": "person.lastName",
        "titleKey": "lastNameLabel",
        "componentType": "textbox"
      },
      {
        "name": "person.document",
        "titleKey": "documentLabel",
        "componentType": "textbox"
      },
      {
        "name": "person.address",
